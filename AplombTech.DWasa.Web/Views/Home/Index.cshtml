@model AplombTech.DWasa.Web.Models.M2MMessageViewModel

<div class="container">
    <div class="row">
        <div class="col-md-4">

            @using (Html.BeginForm("PublishMessage", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false)
                <div class="form-group">
                    <label>@Html.LabelFor(model => model.MessgeTopic)</label>
                    @Html.TextBoxFor(model => model.MessgeTopic, new { @placeholder = "Enter topic", @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>@Html.LabelFor(model => model.PublishMessage)</label>
                    @Html.TextAreaFor(model => model.PublishMessage, new { @placeholder = "Enter message", @class = "form-control", @cols = 80, @rows = 10 })
                </div>

                <button type="submit" value="Publish" class="btn btn-primary">Publish</button>
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
            }
        </div>

        <div class="col-md-4">


            @using (Html.BeginForm("SubscribeMessage", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false)
                <div class="form-group">
                    <label>@Html.LabelFor(model => model.MessgeTopic)</label>
                    @Html.TextBoxFor(model => model.MessgeTopic, new { @placeholder = "Enter topic", @class = "form-control" })
                    @Html.HiddenFor(model => model.PublishMessage)
                </div>
                <div class="form-group">
                    <label>@Html.LabelFor(model => model.SubscriberMessage)</label>
                    @Html.TextAreaFor(model => model.SubscriberMessage, new { @placeholder = "Enter message", @class = "form-control", @cols = 80, @rows = 10 })
                </div>

                <button type="submit" value="Subscrib" class="btn btn-primary">Subscrib</button>
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
            }
        </div>
    </div>
</div>